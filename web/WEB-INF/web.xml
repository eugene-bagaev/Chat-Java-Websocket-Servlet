<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
           version="4.0">

    <display-name>Servlet</display-name>

    <servlet>
        <servlet-name>DownloadingFiles</servlet-name>
        <servlet-class>FileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadingFiles</servlet-name>
        <url-pattern>/servlet/file</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowImages</servlet-name>
        <servlet-class>ImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowImages</servlet-name>
        <url-pattern>/servlet/image</url-pattern>
    </servlet-mapping>

</web-app>
